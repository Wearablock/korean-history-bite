# iOS Fastfile

default_platform(:ios)

# App Store Connect API Key 설정
def api_key
  app_store_connect_api_key(
    key_id: "H9Z8PM46JZ",
    issuer_id: "61771d9b-ea3e-409d-9d3b-c4ee05e77ae8",
    key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey_H9Z8PM46JZ.p8"),
    in_house: false
  )
end

platform :ios do
  desc "TestFlight에 업로드"
  lane :beta do
    api_key

    # Flutter 빌드
    Dir.chdir("../..") do
      sh("flutter build ipa --release --export-options-plist=ios/ExportOptions.plist")
    end

    # TestFlight 업로드
    upload_to_testflight(
      ipa: "../build/ios/ipa/korean_history_bite.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "App Store에 제출"
  lane :release do
    api_key

    # Flutter 빌드
    Dir.chdir("../..") do
      sh("flutter build ipa --release --export-options-plist=ios/ExportOptions.plist")
    end

    # App Store 업로드
    upload_to_app_store(
      ipa: "../build/ios/ipa/korean_history_bite.ipa",
      skip_screenshots: true,
      skip_metadata: true,
      submit_for_review: false
    )
  end

  desc "빌드 번호 증가"
  lane :bump do
    api_key
    increment_build_number(
      build_number: latest_testflight_build_number + 1,
      xcodeproj: "Runner.xcodeproj"
    )
  end

  desc "메타데이터 및 스크린샷 업로드"
  lane :metadata do
    api_key

    deliver(
      skip_binary_upload: true,
      skip_screenshots: true,
      submit_for_review: false,
      automatic_release: false,
      force: true,
      precheck_include_in_app_purchases: false,
      skip_app_version_update: true,
      edit_live: true
    )
  end

  desc "스크린샷만 업로드"
  lane :screenshots do
    api_key

    deliver(
      skip_binary_upload: true,
      skip_screenshots: false,
      skip_metadata: true,
      overwrite_screenshots: true,
      submit_for_review: false,
      force: true,
      run_precheck_before_submit: false,
      precheck_include_in_app_purchases: false
    )
  end
end
